
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <script src="~/Scripts/jquery-3.4.1.js"></script>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script>
        $(document).ready(function () {
            $("#btnEdit").click(function () {
                if (!$('#password').val()) {
                    alert('请输入要修改的用户密码');
                    return;
                } else {
                    $.ajax({
                        type: "post",
                        url: "",
                        data: $("#form-userpwd-edit").serialize(),
                        success: function () {
                            alert('修改成功');
                            window.parent.location.reload();
                        }
                    })
                }
            })
        })
    </script>
    <title>EditUserAdmin</title>
</head>
<body>
    <div class="" style="align-items:center;padding:40px">
        <form id="form-userpwd-edit" method="post">
            <div class="form-group">
                <label for="account">邮箱：</label>
                <input type="hidden" id="id" name="id" value="@ViewBag.id " />
                <input type="text" class="form-control" id="account" name="account" value="@ViewBag.email" style="width:300px;" readonly/>
            </div>
            <div class="form-group">
                <label for="account">昵称：</label>
                <input type="text" class="form-control" id="account" name="account" value="@ViewBag.nick" style="width:300px;" readonly/>
            </div>
            <div class="form-group">
                <label for="password">密码：</label>
                <input type="password" class="form-control" id="password" name="password" value="@ViewBag.pwd" style="width:300px;" />
            </div>
            <br />
            <button type="button" class="btn btn-primary" style="margin-right:30px;" id="btnEdit">保存修改</button>
        </form>
    </div>
</body>
</html>
