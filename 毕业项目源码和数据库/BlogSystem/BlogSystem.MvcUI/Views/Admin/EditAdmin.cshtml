
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <script src="~/Scripts/jquery-3.4.1.js"></script>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $("#btnEdit").click(function () {
                if (!$('#account').val()) {
                    alert('账号不能为空')
                    return;
                } else {
                    $.ajax({
                        type: "post",
                        url: "EditAdmin",
                        data: $("#form-admin-edit").serialize(),
                        success: function () {
                            alert('修改成功');
                            window.parent.location.reload();
                        }
                    })
                }
            })
        })
    </script>
    <title>修改基本信息</title>
</head>
<body>
    <div class="" style="align-items:center;padding:40px">
        <form id="form-admin-edit" method="post">
            <div class="form-group">
                <label for="account">账号：</label>
                <input type="hidden" id="id" name="id" value="@ViewBag.id " />
                <input type="text" class="form-control" id="account" name="account" value="@ViewBag.account" style="width:300px;" />
            </div>
            <span id="texterror" style="color:red"></span>
            <div class="form-group">
                <label for="password">密码：</label>
                <input type="password" class="form-control" id="password" name="password" value="@ViewBag.pwd" style="width:300px;" readonly/>
            </div>
            <br />
            <button type="button" class="btn btn-primary" style="margin-right:30px;" id="btnEdit">保存修改</button>
        </form>
    </div>
</body>
</html>
