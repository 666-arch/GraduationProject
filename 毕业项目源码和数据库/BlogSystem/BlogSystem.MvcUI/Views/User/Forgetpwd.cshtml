
@{
    ViewBag.Title = "Forgetpwd";
    Layout = "~/Views/Shared/_LayoutFront.cshtml";
}
<script src="~/Scripts/jquery-3.4.1.js"></script>
<script>
    var i;
    function yanzhen() {
        var email = $('#email').val();//获取邮箱账号
        $.post("/User/Validcode", {
            "Email": email
        },
            function (data) {
                if (data != "发送成功") {
                    alert("发送失败，有可能是你的邮箱账号不正确")
                } else {
                    i = 60;
                    $("#an").hide();
                    $("#xianshi").show();
                    setInterval("dingshiqi()", 1000);
                    alert("发送成功")
                }
            });
    }
    function dingshiqi() {
        i = i - 1;
        if (i > 0) {
            $("#xianshi").html(i + "秒后再次获取验证码");
        } else {
            $("#xianshi").hide();
            $("#an").show();
        }
    }
    function AjaxPostData() {
        var yanzhengma = document.getElementById("yanzhengma").value;
        var email = document.getElementById("email").value;
        var newpwd = document.getElementById("newpwd").value;
        $.ajax({
            url: '/User/Forgetpwd',//数据提交到的目标url
            type: 'post',//post方式提交
            async: true,//异步提交
            data: { email: email, newpwd: newpwd, yanzhengma: yanzhengma },//提交的数据
            success: function (data) {//发送成功的回调函数
                if (data.success) {
                    alert("密码重置失败,请检查验证码输入是否正确!");
                }
                else {
                    alert("密码重置成功!");
                    window.setTimeout("window.location.href='Login'", 500); //注册成功立马跳转到登录
                    document.getElementById("yanzhengma").value = "";//置空输入框
                }
            },
            error: function () {
                alert("请求失败!请重新提交!");
            }
        });
    }
</script>


<div class="layui-container fly-marginTop">
    <div class="fly-panel fly-panel-user" pad20>
        <div class="layui-tab layui-tab-brief" lay-filter="user">
            <ul class="layui-tab-title">
                <li><a href="/User/Login">登入</a></li>
                <li class="layui-this">找回密码<!--重置密码--></li>
            </ul>
            <div class="layui-form layui-tab-content" id="LAY_ucm" style="padding: 20px 0;">
                <div class="layui-tab-item layui-show">
                    <div class="layui-form layui-form-pane">
                        <form action="javascript:AjaxPostData()">
                            <div class="layui-form-item">
                                <label for="email" class="layui-form-label">邮箱</label>
                                <div class="layui-input-inline">
                                    <input type="text" id="email" name="email" required lay-verify="required" autocomplete="off" class="layui-input" placeholder="请输入已注册的邮箱地址">
                                </div>
                            </div>
                            <div class="layui-form-item">
                                <label for="yzm" class="layui-form-label">验证码</label>
                                <div class="layui-input-inline">
                                    <input type="text" id="yanzhengma" name="yanzhengma" required lay-verify="required" class="layui-input" placeholder="请输入验证码">
                                </div>
                                <div class="layui-form-mid layui-word-aux">
                                    <input type="button" value="获取验证码" onclick="yanzhen()" id="an" class="layui-input" />
                                    <label id="xianshi" style="color:red;"></label><br />
                                </div>
                            </div>
                            <div class="layui-form-item">
                                <label for="newpwd" class="layui-form-label">输入新密码</label>
                                <div class="layui-input-inline">
                                    <input type="text" id="newpwd" name="newpwd" required lay-verify="required" autocomplete="off" class="layui-input" placeholder="请输入密码">
                                </div>
                            </div>
                            <div class="layui-form-item">
                                <button class="layui-btn" alert="1" lay-filter="*" lay-submit>提交</button>
                            </div>
                        </form>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

