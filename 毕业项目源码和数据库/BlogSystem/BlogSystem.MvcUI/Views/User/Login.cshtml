
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutFront.cshtml";
}

<script src="~/Scripts/jquery-3.4.1.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $("#btn-submit").click(function () {
            if (!$('#email').val()) {
                swal({
                    position: 'top-end', //定位 左上角
                    title: "请输入邮箱",
                    icon: "warning",
                    showCancelButton: true
                });
                return;
            }
            if (!$('#password').val()) {
                swal({
                    position: 'top-end', //定位 左上角
                    title: "请输入密码",
                    icon: "warning",
                    showCancelButton: true
                });
                return;
            } else {
                $.ajax({
                    type: "post",
                    url: "Login",
                    dataType: "json",
                    data: {
                        email: $("#email").val(),
                        password: $("#password").val(),
                        remberme:$("#remberme").prop("checked")
                    },
                    success: function (msg) {
                        if (!msg.status) {
                            console.log(msg.data);
                            swal({
                                title: "账号或密码错误",
                                icon: "error",
                                showConfirmButton: false
                            });
                            return;
                        } else {
                            swal({
                                title: "登录成功",
                                icon: "success",
                                showConfirmButton: false
                            });
                            window.setTimeout("window.location.href='Index'",1000);
                        }
                    }
                });
            }
        });
    })
</script>
<div class="layui-container fly-marginTop">
    <div class="fly-panel fly-panel-user" pad20>
        <div class="layui-tab layui-tab-brief" lay-filter="user">
            <ul class="layui-tab-title">
                <li class="layui-this">登入</li>
                <li><a href="/User/Register">注册</a></li>
            </ul>
            <div class="layui-form layui-tab-content" id="LAY_ucm" style="padding: 20px 0;">
                <div class="layui-tab-item layui-show">
                    <div class="layui-form layui-form-pane">
                        <form method="post" id="form-log">
                            <div class="layui-form-item">
                                <label for="email" class="layui-form-label">邮箱</label>
                                <div class="layui-input-inline">
                                    <input type="hidden" name="name" value="@ViewBag.uid" />
                                    <input type="text" id="email" name="email" value="@ViewBag.name" autocomplete="off" class="layui-input">
                                </div>
                            </div>
                            <div class="layui-form-item">
                                <label for="password" class="layui-form-label">密码</label>
                                <div class="layui-input-inline">
                                    <input type="password" id="password" name="password" autocomplete="off" class="layui-input">
                                </div>
                            </div>
                            <input type="checkbox" id="remberme" checked="" />记住账号
                            <br />
                            <br />
                            <div class="layui-form-item">
                                <input type="button" class="layui-btn" name="name" value="立即登录" id="btn-submit" />
                                <span style="padding-left:20px;">
                                    <a href="/User/Forgetpwd">忘记密码？</a>
                                </span>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>